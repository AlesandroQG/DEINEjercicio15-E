<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane alignment="CENTER" prefHeight="400.0" prefWidth="800.0" vgap="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alesandro.ejercicio15c.PersonasController">
   <children>
      <TableView fx:id="tabla" prefHeight="350.0" prefWidth="780.0">
        <columns>
          <TableColumn fx:id="colNombre" minWidth="-1.0" prefWidth="150.0" text="NOMBRE" />
          <TableColumn fx:id="colApellidos" prefWidth="150.0" text="APELLIDOS" />
            <TableColumn fx:id="colEdad" text="EDAD" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <FlowPane alignment="CENTER" hgap="20.0" prefWidth="400.0" prefWrapLength="500.0">
         <children>
            <Button mnemonicParsing="false" onAction="#agregarPersona" text="Agregar Persona" />
            <Button mnemonicParsing="false" onAction="#modificarPersona" text="Modificar Persona" />
            <Button mnemonicParsing="false" onAction="#eliminarPersona" text="Eliminar Persona" />
         </children>
      </FlowPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</FlowPane>
